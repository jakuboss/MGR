<!-- lista aktywnych zleceń produkcyjnych -->
<form action="/productForm/active" method="GET">
    <%- include('_form_fields.ejs') %>
</form>
<div class="row">
    <div class="col-lg-12 ">
        <table class="table table-hover table-striped ">
            <thead>
                <tr class="table-secondary">
                    <th style="width: 5em;" scope="col">Kol.</th>
                    <th style="width: 15em;" scope="col">Numer zamówienia</th>
                    <th style="width: 15em;" scope="col">Linia produkcyjna</th>
                    <th style="width: 15em;" scope="col">Data produkcji</th>
                    <th style="width: 15em;" scope="col">Produkt</th>
                    <th style="width: 15em;" scope="col">Zamówiona ilość</th>
                    <th style="width: 15em;" scope="col">Akcja</th>
                </tr>
            </thead>
            <% productorders.forEach(order => { %>
            <tbody>
                <tr class="table-light">
                    <td><%= order.sequence %></td>
                    <td scope="row"><%= order.prodOrder %></td>
                    <td><%= order.prodLine %></td>
                    <td><%= order.prodDate %></td>
                    <td><%= order.productName %></td>
                    <td><%= order.orderQty %></td>
                    <td>
                        <div class="row">
                            <a class="btn btn-sm btn-success" href="/productForm/<%= order.id %>/active">Edytuj</a>
                        </div>
                    </td>
            </tbody>
            <% }) %>
        </table>
    </div>
</div>