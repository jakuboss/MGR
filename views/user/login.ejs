<!-- strona logowania -->
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Zaloguj</h1>
      <% include ../partials/messages %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Wprowadź adres email" />
        </div>
        <div class="form-group">
          <label for="password">Hasło</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Wprowadź hasło" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Zaloguj</button>
      </form>
      <p class="lead mt-4">
        Nie masz konta? <a href="/users/register">Zarejestruj</a>
      </p>
    </div>
  </div>
</div>