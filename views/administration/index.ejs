<!-- przegląd użytkowników - admin view -->
<h2>Przegląd użytkowników</h2>
<form action="/administration" method="GET">
    <div class="row">
        <div class="col-lg-4 ">
            <div class="bs-component">
                <div class="card border-primary mb-2">
                    <h5 class=" card-header">Email</h5>
                    <div class="card-body">
                        <input type="text" name="email" value="<%= searchOptions.email %>">
                        <button type="submit" class="btn btn-primary btn-sm">Wyszukaj</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="row">
    <div class="col-lg-12 ">
        <table class="table table-hover">
            <thead>
                <tr class="table-secondary">
                    <th scope="col">Email</th>
                    <th scope="col">Nazwa konta</th>
                    <th scope="col">Data założenia konta</th>
                    <th scope="col">Uprawnienia</th>
                    <th scope="col">Akcja</th>
                </tr>
            </thead>

            <% users.forEach(user => { %>
            <tbody>
                <tr class="table-light">
                    <th scope="row"><%= user.email %></th>
                    <td><%=user.name%></td>
                    <td><%=user.date%></td>
                    <td><%= user.permission %></td>
                    <td>
                        <div class="row">

                            <a class="btn btn-sm btn-success" href="/administration/<%= user.id %>/edit"
                                style="margin-right: 0.25rem;">Edytuj</a>
                            <%- include('../partials/deleteForm',
                    { url:`/administration/${user.id}` }) %>
                        </div>
                    </td>
            </tbody>
            <% }) %>
        </table>
    </div>
</div>