<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <% include ../partials/messages %>
            <%=user.email%>

            <form action="/profile/newpassword" method="POST">
                <div class="form-group">
                    <label for="oldpassword">Stare hasło</label>
                    <input type="oldpassword" id="oldpassword" name="oldpassword" class="form-control"
                        placeholder="Wprowadź  stare hasło" />
                </div>

                <div class="form-group">
                    <label for="newpassword">Nowe hasło</label>
                    <input type="newpassword" id="newpassword" name="newpassword" class="form-control"
                        placeholder="Wprowadź nowe hasło" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Zmień hasło</button>
            </form>


        </div>
    </div>
</div>